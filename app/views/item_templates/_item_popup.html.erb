<div id="popup-overlay" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); z-index: 1000;">
  <div id="popup-content" style="position: relative; width: 80%; max-width: 600px; margin: 5% auto; background-color: white; padding: 20px; border-radius: 8px;">
    <!-- Close Button -->
    <button onclick="hidePopup()" style="position: absolute; top: 10px; right: 10px; background: none; border: none; font-size: 1.5em;">&times;</button>

    <!-- Detailed item content -->
    <div style="background-color: #f08a85; padding: 20px; border-radius: 8px 8px 0 0; color: white;">
      <h1 style="margin: 0;">Item Name</h1>
    </div>
    
    <div style="padding: 20px;">
      <div style="display: flex; gap: 20px;">
        <div style="flex: 1; border: 1px solid #ccc; height: 100px;">
          <!-- Placeholder for an image -->
        </div>
        <div style="flex: 3;">
          <h3>Description</h3>
          <p style="border: 1px solid #ccc; padding: 10px; min-height: 80px;">Detailed description goes here.</p>
        </div>
      </div>

      <hr style="margin: 20px 0; border: none; border-top: 1px solid #ccc;">
      
      <div style="display: flex; justify-content: space-between; gap: 10px;">
        <div style="flex: 1; padding: 10px; border: 1px solid #ccc;">
          <strong>Hours per week</strong>
          <p>8-9</p>
        </div>
        <div style="flex: 1; padding: 10px; border: 1px solid #ccc;">
          <strong>Average Bid Price</strong>
          <p>12,000</p>
        </div>
      </div>

      <div style="padding: 10px; border: 1px solid #ccc; margin-top: 10px;">
        <strong>Category</strong>
        <p>Finance</p>
      </div>

      <div style="padding: 10px; border: 1px solid #ccc; margin-top: 10px;">
        <strong>Prerequisites</strong>
        <p>Entrepreneurial Finance, Corporate Finance, Investments</p>
      </div>
    </div>
  </div>
</div>
